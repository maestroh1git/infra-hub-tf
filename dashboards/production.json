# CloudWatch Dashboard for maestrohwithit Infrastructure
# This creates a comprehensive monitoring dashboard
# Deploy with: aws cloudwatch put-dashboard --dashboard-name maestrohwithitProduction --dashboard-body file://this-file.json

{
  "widgets": [
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/EC2", "CPUUtilization", {"stat": "Average", "label": "EC2 CPU Average"}],
          ["...", {"stat": "Maximum", "label": "EC2 CPU Max"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "EC2 CPU Utilization",
        "period": 300,
        "yAxis": {
          "left": {
            "min": 0,
            "max": 100
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/RDS", "CPUUtilization", {"stat": "Average"}],
          [".", "DatabaseConnections", {"stat": "Sum", "yAxis": "right"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "RDS Performance",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/RDS", "FreeStorageSpace", {"stat": "Average"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "RDS Free Storage",
        "period": 300,
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/ApplicationELB", "TargetResponseTime", {"stat": "Average"}],
          [".", "RequestCount", {"stat": "Sum", "yAxis": "right"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "ALB Performance",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/ApplicationELB", "HealthyHostCount", {"stat": "Average", "label": "Healthy"}],
          [".", "UnHealthyHostCount", {"stat": "Average", "label": "Unhealthy"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "ALB Target Health",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/EKS", "node_cpu_utilization", {"stat": "Average"}],
          [".", "node_memory_utilization", {"stat": "Average"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "EKS Node Resources",
        "period": 300,
        "yAxis": {
          "left": {
            "min": 0,
            "max": 100
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/S3", "BucketSizeBytes", {"stat": "Average"}],
          [".", "NumberOfObjects", {"stat": "Average", "yAxis": "right"}]
        ],
        "view": "singleValue",
        "region": "us-east-2",
        "title": "S3 Storage",
        "period": 86400
      }
    },
    {
      "type": "log",
      "properties": {
        "query": "SOURCE '/aws/vpc/prod-maestrohwithit-flow-logs'\n| fields @timestamp, srcAddr, dstAddr, action\n| filter action = 'REJECT'\n| stats count() by srcAddr\n| sort count desc\n| limit 20",
        "region": "us-east-2",
        "title": "Top Rejected IPs (VPC Flow Logs)",
        "stacked": false
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/ApplicationELB", "HTTPCode_Target_2XX_Count", {"stat": "Sum", "label": "2XX"}],
          [".", "HTTPCode_Target_4XX_Count", {"stat": "Sum", "label": "4XX"}],
          [".", "HTTPCode_Target_5XX_Count", {"stat": "Sum", "label": "5XX"}]
        ],
        "view": "timeSeries",
        "stacked": true,
        "region": "us-east-2",
        "title": "HTTP Response Codes",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["ContainerInsights", "pod_cpu_utilization", {"stat": "Average"}],
          [".", "pod_memory_utilization", {"stat": "Average"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "EKS Pod Resources",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/Lambda", "Invocations", {"stat": "Sum"}],
          [".", "Errors", {"stat": "Sum"}],
          [".", "Duration", {"stat": "Average", "yAxis": "right"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "Lambda Metrics",
        "period": 300
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          ["AWS/Backup", "NumberOfBackupJobsCompleted", {"stat": "Sum"}],
          [".", "NumberOfBackupJobsFailed", {"stat": "Sum"}]
        ],
        "view": "timeSeries",
        "stacked": false,
        "region": "us-east-2",
        "title": "Backup Jobs",
        "period": 86400
      }
    }
  ]
}
